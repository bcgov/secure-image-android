<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/bcLogoIv"
        android:src="@drawable/ic_bc_logo"
        android:contentDescription="@null"
        android:layout_marginTop="48dp"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/loginTv"/>

    <TextView
        android:id="@+id/loginTv"
        android:text="@string/login"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:elevation="8dp"
        android:gravity="center"
        android:background="@drawable/selector_rect_color_primary_light_rounded_28dp"
        android:layout_width="200dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@+id/bcLogoIv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>