<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/black"
    tools:context="ca.bc.gov.secureimage.screens.securecamera.SecureCameraActivity">

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/cameraView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/captureImageIv"
        android:contentDescription="@string/take_image"
        android:tint="@color/darkGray"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:background="@drawable/shape_white_oval"
        android:padding="16dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/backIv"
        android:tint="@color/darkGray"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:background="@drawable/shape_white_oval"
        android:padding="16dp"
        android:contentDescription="@string/back"
        android:layout_marginStart="32dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/captureImageIv"/>

    <ImageView
        android:id="@+id/doneIv"
        android:tint="@color/darkGray"
        android:src="@drawable/ic_check_black_24dp"
        android:background="@drawable/shape_white_oval"
        android:padding="16dp"
        android:contentDescription="@string/done"
        android:layout_marginEnd="32dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/captureImageIv"/>

    <TextView
        android:id="@+id/flashControlTv"
        android:textColor="@color/darkGray"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:drawableStart="@drawable/ic_flash_off_black_24dp"
        android:drawablePadding="4dp"
        android:background="@drawable/shape_rect_white_rounded"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="@+id/cameraView"
        app:layout_constraintRight_toRightOf="@+id/cameraView"/>

    <TextView
        android:id="@+id/imageCounterTv"
        android:textColor="@color/darkGray"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/shape_rect_white_rounded"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        app:layout_constraintBottom_toTopOf="@+id/captureImageIv"
        app:layout_constraintLeft_toLeftOf="@+id/captureImageIv"
        app:layout_constraintRight_toRightOf="@+id/captureImageIv"/>

</android.support.constraint.ConstraintLayout>
