<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/colorPrimary"
    tools:context="ca.bc.gov.secureimage.screens.login.LoginActivity">

    <EditText
        android:id="@+id/emailEt"
        android:textSize="14sp"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:background="@drawable/shape_rect_white_solid_rounded"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:maxWidth="156dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/govBcCaTv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/govBcCaTv"
        android:text="@string/gov_bc_ca"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/emailEt"
        app:layout_constraintLeft_toRightOf="@+id/emailEt"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/logInTv"
        android:text="@string/login"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:elevation="8dp"
        android:gravity="center"
        android:background="@drawable/shape_rect_color_primary_light_solid_rounded"
        android:layout_margin="32dp"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintWidth_max="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
