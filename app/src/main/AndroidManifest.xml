<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.bc.gov.secureimage">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ca.bc.gov.secureimage.common.base.BaseApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screens.enteremail.EnterEmailActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.albums.AlbumsActivity" />
        <activity android:name=".screens.createalbum.CreateAlbumActivity" />
        <activity android:name=".screens.allimages.AllImagesActivity"></activity>
    </application>

</manifest>