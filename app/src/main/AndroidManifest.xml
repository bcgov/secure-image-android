<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.bc.gov.secureimage">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".common.base.BaseApplication"
        android:icon="@mipmap/app_icon"
        android:roundIcon="@mipmap/app_icon_round"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screens.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.albums.AlbumsActivity" />
        <activity android:name=".screens.createalbum.CreateAlbumActivity" />
        <activity android:name=".screens.allimages.AllImagesActivity" />
        <activity android:name=".screens.securecamera.SecureCameraActivity" />
        <activity android:name=".screens.imagedetail.ImageDetailActivity" />
        <activity android:name=".screens.settings.SettingsActivity" />

    </application>

</manifest>